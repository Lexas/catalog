
mixin defTerm(term, caption, className)
    if term != null || block
        span(class="#{className || caption.toLowerCase().replace(' ', '_')}")
            dt #{caption}
            dd 
                if term
                    | #{term}
                if block
                    block


mixin pageNav(url, caption)
    - var hidden = url ? '' : 'hidden'
    a(class=hidden data-goto=caption href=url): | #{caption}
