mixin branch(data)
	dl
		for val, key in data
			dt
			| #{key}:
			if(typeof val == 'object')
				dd 
					dl
						+branch(val)
			else
				dd
				|#{val}

include includes/top
	for work in works
		+branch(work)
include includes/bottom